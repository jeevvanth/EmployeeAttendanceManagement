@model Attendance

<h1>Edit Attendance Details</h1>
<form method="post">
    <div class="mt-3">
        <label class="form-label">Attendance Id</label>
        <input type="number" class="form-control" asp-for="Attendace_Id" />
    </div>
    <div class="mt-3">
        <label class="form-label">Employee Id</label>
        <input type="number" class="form-control" asp-for="Employee_Id" />
    </div>
    <div class="mt-3">
        <label class="form-label"> Attendance Date</label>
        <input type="date" class="form-control" asp-for="Attendance_Date" />
    </div>
    <div class="mt-3">
        <label class="form-label">Check In Time</label>
        <input type="time" class="form-control" asp-for="Check_in" />
    </div>
    <div class="mt-3">
        <label class="form-label">Check Out Time</label>
        <input type="time" class="form-control" asp-for="Check_out" />
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>