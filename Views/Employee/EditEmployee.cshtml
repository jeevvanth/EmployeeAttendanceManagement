@{
}
@model Employee

<h1>Edit Employee</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Employee Id</label>
        <input type="number" class="form-control" asp-for="Employee_Id" />
    </div>
    <div class="mt-3">
        <label class="form-label">Employee Name</label>
        <input type="text" class="form-control" asp-for="Employee_Name" />
    </div>
    <div class="mt-3">
        <label class="form-label">Employee Email</label>
        <input type="email" class="form-control" asp-for="Employee_Email" />
    </div>
    <div class="mt-3">
        <label class="form-label">Employee Department</label>
        <input type="text" class="form-control" asp-for="Employee_Department" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>